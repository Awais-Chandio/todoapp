# Set Dart as the main language
*.dart linguist-language=Dart

# Ignore CMake files in stats
*.cmake linguist-language=ignore
CMakeLists.txt linguist-language=ignore

# Ignore other non-Dart files
*.cpp linguist-language=ignore
*.swift linguist-language=ignore
*.c linguist-language=ignore
*.html linguist-language=ignore
*.xml linguist-language=ignore
*.json linguist-language=ignore
*.gradle linguist-language=ignore
*.java linguist-language=ignore
*.cmake merge=union


# Mark build and asset directories as vendor
build/ linguist-vendored
assets/ linguist-vendored
